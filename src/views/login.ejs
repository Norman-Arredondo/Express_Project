                                                <span class="icon is-small is-left">
                                                    <i class="fas fa-envelope"></i>
                                                </span>
                                                
                                            </div>
                                            <p class="help is-danger" id="mensaje_correo"></p>
                                        </div>
                                        <div class="field">
                                            <label class="label">Password</label>
                                            <div class="control has-icons-left has-icons-right">
                                                <input class="input" type="password" id="password_input" placeholder="****">
                                                <span class="icon is-small is-left">
                                                    <i class="fas fa-user" id="iconGood"></i>
                                                </span>
                                                
                                            </div>
                                            <p class="help is-danger" id="mensaje_password"></p>
                                        </div>
                                        <div class="field">
